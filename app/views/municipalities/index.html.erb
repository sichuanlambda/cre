<style>
  .municipality-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 20px;
  }

  .municipality-card {
    background: #f0f4f8;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    flex: 1 1 calc(33.333% - 40px);
    min-width: 300px;
    max-width: calc(50% - 40px);
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .municipality-details {
    display: flex;
    flex-direction: row;
    gap: 20px;
    justify-content: space-between;
  }

  .info-column {
    display: flex;
    flex-direction: row;
    gap: 20px;
    flex-wrap: wrap;
  }

  .election-info,
  .development-score {
    flex: 1 1 calc(50% - 10px);
    min-width: 200px;
  }

  .council-members {
    position: relative;
    width: 60%;
    margin-left: auto;
  }

  .council-members .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    padding: 10px;
  }

  .council-members .content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .council-members.active .content {
    max-height: 500px;
  }

  .toggle-icon {
    transition: transform 0.3s ease;
  }

  .council-members.active .toggle-icon {
    transform: rotate(180deg);
  }

  .rating-description {
    font-size: 0.9em;
    color: #666;
  }

  .social-links {
    margin-top: 5px;
  }

  .social-link {
    margin-left: 10px;
    text-decoration: none;
    color: #666;
    font-size: 1.1em;
  }

  .social-link:hover {
    color: #007bff;
  }

  .social-link.twitter:hover {
    color: #1DA1F2;
  }

  .social-link.linkedin:hover {
    color: #0077B5;
  }

  .news-articles {
    flex: 1;
  }

  .council-members ul {
    list-style: none;
    padding: 0;
  }

  .council-members li {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10px;
  }

  .development-score {
    position: absolute;
    top: 10px;
    right: 20px;
    text-align: right;
  }

  .development-score h3 {
    font-size: 0.8em;
    margin-top: 5px;
    order: 2;
    color: #666;
  }

  .development-score .score {
    font-size: 1.8em;
    font-weight: bold;
    order: 1;
  }

  .rating-description {
    color: #2ecc71;
  }
</style>
<div class="municipalities-container">
  <h1>Municipality Council Tracker</h1>

  <%= form_with url: search_municipalities_path, method: :get, data: { turbo_frame: "results" } do |f| %>
    <div class="search-container">
      <%= f.text_field :query, placeholder: "Search municipalities...", class: "search-input" %>
      <%= f.submit "Search", class: "search-button" %>
    </div>
  <% end %>

  <%= turbo_frame_tag "results" do %>
    <div class="municipality-list">
      <% @municipalities.each do |municipality| %>
        <div class="municipality-card">
          <h2><%= municipality.name %></h2>
          
          <div class="development-score">
            <div class="score"><%= municipality.development_score&.current_score || "N/A" %></div>
            <h3>Development Score</h3>
            <p class="rating-description"><%= 
              case municipality.development_score&.rating_description
              when /very development friendly/i then "Very Friendly"
              when /development friendly/i then "Friendly"
              when /somewhat development friendly/i then "Somewhat Friendly"
              else "No rating"
              end
            %></p>
          </div>

          <div class="municipality-details">
            <div class="news-articles">
              <h3>Recent News</h3>
              <% if municipality.news_articles.any? %>
                <ul>
                  <% municipality.news_articles.limit(3).each do |article| %>
                    <li>
                      <strong><%= link_to article.title, article.url, target: "_blank" %></strong>
                      <p><%= article.published_at&.strftime("%B %d, %Y") %></p>
                      <p><%= truncate(article.description, length: 150) %></p>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p>No recent news available</p>
              <% end %>
            </div>

            <div class="council-members">
              <h3>Council Members</h3>
              <div class="election-info">
                <p><strong>Next Election:</strong> <%= municipality.next_election_date ? municipality.next_election_date.strftime("%B %d, %Y") : "Not scheduled" %></p>
              </div>
              <ul>
                <% municipality.council_members.each do |member| %>
                  <li>
                    <strong><%= member.name %></strong> <%= member.position %>
                    <% if member.social_links.present? %>
                      <div class="social-links">
                        <% member.social_links.each do |platform, url| %>
                          <%= link_to url, class: "social-link #{platform}", target: "_blank", title: platform.to_s.titleize do %>
                            <i class="fa-brands fa-<%= platform.to_s.downcase %>"></i>
                          <% end %>
                        <% end %>
                      </div>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.collapsible .header').forEach(header => {
    header.addEventListener('click', function() {
      this.closest('.collapsible').classList.toggle('active');
    });
  });
});
</script> 