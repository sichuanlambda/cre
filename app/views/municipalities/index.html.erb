<header class="site-header">
  <div class="logo">
    <%= image_tag "logo.png", alt: "Council Tracker Logo" %>
    <span class="logo-text">City Council Tracker</span>
  </div>
  
  <nav class="main-nav">
    <%= link_to "Home", root_path, class: "nav-link" %>
    <%= link_to "Municipalities", municipalities_path, class: "nav-link" %>
    <%# We can add more links once the routes are defined %>
  </nav>

  <div class="header-subscribe">
    <%= form_with url: subscribe_updates_path, method: :post, class: "form-container compact" do |f| %>
      <%= f.email_field :email, 
          placeholder: "Enter your email for updates...", 
          class: "form-input" %>
      <%= f.submit "Subscribe", class: "form-button secondary" %>
    <% end %>
  </div>
</header>

<div class="main-content-container">
  <div class="request-section">
    <h1>Turning Publicly Available City Council & Municipal Information into Development Action</h1>
    <h2>Request New Municipality</h2>
    <%= form_with url: request_municipality_path, method: :post, class: "form-container" do |f| %>
      <div class="form-inputs">
        <%= f.text_field :municipality_name, 
            placeholder: "Enter municipality name...", 
            required: true,
            class: "form-input" %>
        <%= f.email_field :email, 
            placeholder: "Your email...", 
            required: true,
            class: "form-input" %>
      </div>
      <%= f.submit "Request", class: "form-button primary" %>
    <% end %>
  </div>

  <div class="rankings-container">
    <h2>City Council Rankings</h2>
    <div class="counter-widget">
      <span class="counter-number"><%= Municipality.count %></span>
      <span class="counter-label">Cities</span>
    </div>
    <div class="rankings-columns">
      <div class="ranking-column most">
        <h3><span class="highlight">Most</span> Development Friendly</h3>
        <div class="ranking-list">
          <% @top_municipalities.each_with_index do |municipality, index| %>
            <div class="ranking-item">
              <span class="rank">#<%= index + 1 %></span>
              <span class="name"><%= municipality.name %></span>
              <span class="score"><%= municipality.development_score&.current_score %></span>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="ranking-column least">
        <h3><span class="highlight">Least</span> Development Friendly</h3>
        <div class="ranking-list">
          <% @bottom_municipalities.each_with_index do |municipality, index| %>
            <div class="ranking-item">
              <span class="rank">#<%= index + 1 %></span>
              <span class="name"><%= municipality.name %></span>
              <span class="score"><%= municipality.development_score&.current_score %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="coverage-section">
  <div class="coverage-content">
    <div class="map-container">
      <div id="map"></div>
    </div>
    
    <div class="search-container">
      <h3>Find Your Municipality</h3>
      <%= form_with url: municipalities_path(anchor: 'search-results'), 
                    method: :get, 
                    class: "search-form", 
                    data: { turbo: false } do |f| %>
        <%= f.text_field :query, 
            placeholder: "Search by city name or state...", 
            class: "search-input",
            value: params[:query] %>
        <%= f.submit "Search", class: "search-button" %>
      <% end %>
      
      <div class="search-results">
        <% if params[:query].present? %>
          <% @municipalities.each do |municipality| %>
            <div class="municipality-result">
              <%= link_to municipality.name, municipality_path(municipality), class: "municipality-link" %>
              <span class="state-label"><%= municipality.state %></span>
            </div>
          <% end %>
        <% else %>
          <div class="sponsorship-section">
            <h4>Made Available By</h4>
            <a href="https://plotzy.ai" target="_blank" class="sponsor-link">
              <%= image_tag "plotzy-logo.jpg", alt: "Plotzy.ai Logo", class: "sponsor-logo" %>
              <span class="sponsor-name">Plotzy.ai</span>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var map = L.map('map').setView([37.8, -96], 4); // Centered on the US

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 18,
      attribution: '© OpenStreetMap'
    }).addTo(map);

    <% @map_municipalities.each do |municipality| %>
      <% if municipality.latitude.present? && municipality.longitude.present? %>
        L.marker([<%= municipality.latitude %>, <%= municipality.longitude %>])
          .addTo(map)
          .bindPopup('<%= municipality.name %>');
      <% end %>
    <% end %>
  });
</script>

<%= turbo_frame_tag "results" do %>
  <div class="municipality-list">
    <% @municipalities.each do |municipality| %>
      <div class="municipality-card">
        <% if municipality.image_url.present? %>
          <%= link_to municipality_path(municipality), 
              class: "municipality-card-image",
              data: { turbo: false },
              method: :get do %>
            <%= image_tag(municipality.image_url, alt: "#{municipality.name} skyline") %>
            <div class="municipality-name-overlay">
              <h2><%= municipality.name %></h2>
              <p><%= municipality.state %></p>
            </div>
            <div class="rating-description-overlay">
              <p class="rating-description"><%= 
                case municipality.development_friendliness_rating
                when 80..100 then "Very Friendly"
                when 60..79 then "Friendly"
                when 40..59 then "Somewhat Friendly"
                when 20..39 then "Less Friendly"
                else "Needs Improvement"
                end
              %></p>
            </div>
            <div class="development-score">
              <div class="score"><%= municipality.development_friendliness_rating %></div>
              <h3>Development Score</h3>
            </div>
          <% end %>
        <% else %>
          <%= link_to municipality_path(municipality), class: "municipality-card-header" do %>
            <div class="municipality-name">
              <h2><%= municipality.name %></h2>
              <p><%= municipality.state %></p>
            </div>
          <% end %>
        <% end %>
        <div class="municipality-card-content">
          <div class="municipality-details">
            <div class="news-and-council">
              <!-- News Articles Section -->
              <div class="news-articles">
                <div class="section-header">
                  <h3>Recent News</h3>
                </div>
                <% if municipality.news_articles.any? %>
                  <ul>
                    <% municipality.news_articles.limit(2).each do |article| %>
                      <li>
                        <%= link_to article.title, article.url, target: "_blank" %>
                        <p class="article-date"><%= article.published_at&.strftime("%B %d, %Y") %></p>
                        <p class="article-description"><%= truncate(article.description, length: 100) %></p>
                      </li>
                    <% end %>
                  </ul>
                <% else %>
                  <p>No recent news available</p>
                <% end %>
              </div>

              <!-- Council Members Section -->
              <div class="council-members" id="council-members-<%= municipality.id %>">
                <div class="section-header">
                  <h3>Council Members</h3>
                  <div class="election-info">
                    <div class="election-info">
                      <p class="label">Next Election:</p>
                      <p class="date">
                        <% if municipality.next_election_date %>
                          <%= municipality.next_election_date.strftime("%B %d, %Y") %>
                        <% else %>
                          Not scheduled
                        <% end %>
                      </p>
                    </div>
                  </div>
                </div>
                
                <div class="council-members-list">
                  <% municipality.council_members.first(4).each do |member| %>
                    <div class="council-member-card">
                      <div class="member-info">
                        <div class="member-name-row">
                          <h3 title="<%= member.name %>"><%= member.name %></h3>
                          <% if member.social_links.present? %>
                            <div class="social-links">
                              <% member.social_links.each do |platform, url| %>
                                <%= link_to url, class: "social-link #{platform}", target: "_blank" do %>
                                  <i class="fa-brands fa-<%= platform.to_s.downcase %>"></i>
                                <% end %>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                        <p class="member-position"><%= member.position %></p>
                      </div>
                    </div>
                  <% end %>
                </div>
                
                <% if municipality.council_members.count > 4 %>
                  <%= link_to municipality_path(municipality), class: "show-more-link", data: { turbo: false } do %>
                    View all <%= municipality.council_members.count %> council members →
                  <% end %>
                <% end %>
              </div>
            </div>

            <!-- Municipal Resources Section -->
            <div class="municipal-resources-section">
              <div class="section-header">
                <h3>Municipal Resources</h3>
              </div>
              <% if municipality.municipal_resources.any? %>
                <div class="resources-columns">
                  <% municipality.municipal_resources.group_by(&:category).each_slice(2) do |category_pair| %>
                    <div class="resources-column">
                      <% category_pair.each do |category, resources| %>
                        <div class="resource-group">
                          <h4 class="resource-category-title"><%= category.titleize %></h4>
                          <ul class="resources-list">
                            <% resources.take(3).each do |resource| %>
                              <li>
                                <%= link_to resource.title, resource.url, target: "_blank" %>
                                <% if resource.last_updated %>
                                  <span class="resource-date">Updated: <%= resource.last_updated.strftime("%B %d, %Y") %></span>
                                <% end %>
                              </li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p>No resources available</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.collapsible .header').forEach(header => {
    header.addEventListener('click', function() {
      this.closest('.collapsible').classList.toggle('active');
    });
  });
});
</script> 