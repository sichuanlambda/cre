<div class="dashboard-container">
  <!-- Sidebar with Document List -->
  <div class="sidebar">
    <h2 class="section-title">
      Your Documents
      <% if @documents.present? %>
        <span class="document-count"><%= @documents.count %> documents</span>
      <% end %>
    </h2>
    
    <div class="documents-list">
      <% if @documents.present? %>
        <% @documents.each do |doc| %>
          <%= link_to document_chat_path(doc), class: "document-item" do %>
            <div class="document-info">
              <div class="document-name"><%= doc.name %></div>
              <div class="document-meta">
                <%= doc.document_type.titleize %> â€¢ 
                <%= time_ago_in_words(doc.created_at) %> ago
              </div>
            </div>
            <div class="document-actions" onclick="event.stopPropagation();">
              <%= link_to document_chat_path(doc), class: "action-button chat", title: "Chat" do %>
                <i class="fas fa-comments"></i>
              <% end %>
              <%= button_to document_path(doc), 
                    method: :delete, 
                    class: "action-button delete",
                    title: "Delete",
                    data: { confirm: "Are you sure you want to delete this document?" } do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="empty-state">
          <p>No documents uploaded yet</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Upload Section -->
  <div class="upload-section">
    <h2 class="section-title">Upload New Document</h2>
    
    <%= form_with(model: @document, local: true, class: "upload-form") do |f| %>
      <div class="form-group">
        <%= f.label :name, "Document Name" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter document name" %>
      </div>

      <div class="form-group">
        <%= f.label :document_type, "Document Type" %>
        <%= f.select :document_type, 
            Document::VALID_TYPES.map { |type| [type.titleize, type] },
            {},
            class: "form-control" %>
      </div>

      <!-- File Upload -->
      <div class="form-group">
        <label>Document File</label>
        <div class="file-upload-area">
          <i class="fas fa-cloud-upload-alt"></i>
          <p>Drag and drop your file here or</p>
          <%= f.file_field :file, class: "file-input" %>
          <button type="button" class="browse-button">Browse Files</button>
          <p class="file-hint">PDF, DOC, DOCX up to 10MB</p>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="form-actions">
        <%= f.submit "Upload & Analyze", class: "btn btn-primary" %>
      </div>
    <% end %>

  <!-- Features Section -->
  <div class="features-section">
    <div class="feature-card">
      <div class="feature-icon">
        <i class="fas fa-bolt"></i>
      </div>
      <div class="feature-content">
        <h3>Instant Analysis</h3>
        <p>Get AI-powered insights from your documents in seconds</p>
      </div>
    </div>

    <div class="feature-card">
      <div class="feature-icon">
        <i class="fas fa-shield-alt"></i>
      </div>
      <div class="feature-content">
        <h3>Secure & Private</h3>
        <p>Enterprise-grade security for your sensitive documents</p>
      </div>
    </div>

    <div class="feature-card">
      <div class="feature-icon">
        <i class="fas fa-code"></i>
      </div>
      <div class="feature-content">
        <h3>Smart Extraction</h3>
        <p>Automatically extract key terms and conditions</p>
      </div>
    </div>
  </div>
</div>
</div>

<!-- Keep the existing JavaScript for file upload -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get references to the elements
    const fileInput = document.querySelector('.file-input');
    const browseButton = document.querySelector('.browse-button');
    const fileUploadArea = document.querySelector('.file-upload-area');
    
    // Handle browse button click
    browseButton.addEventListener('click', function() {
      fileInput.click();
    });

    // Handle drag and drop
    fileUploadArea.addEventListener('dragover', function(e) {
      e.preventDefault();
      fileUploadArea.style.borderColor = '#1976d2';
    });

    fileUploadArea.addEventListener('dragleave', function(e) {
      e.preventDefault();
      fileUploadArea.style.borderColor = '#ddd';
    });

    fileUploadArea.addEventListener('drop', function(e) {
      e.preventDefault();
      fileUploadArea.style.borderColor = '#ddd';
      fileInput.files = e.dataTransfer.files;
      updateFileName(e.dataTransfer.files[0]);
    });

    // Handle file selection
    fileInput.addEventListener('change', function(e) {
      if (this.files && this.files[0]) {
        updateFileName(this.files[0]);
      }
    });

    // Update the UI with the selected filename
    function updateFileName(file) {
      const fileHint = fileUploadArea.querySelector('.file-hint');
      fileHint.textContent = `Selected file: ${file.name}`;
    }
  });
</script> 