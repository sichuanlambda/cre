<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">Upload Document</h1>
  
  <%= form_with(model: @document, local: true, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300" %>
    </div>
    
    <div>
      <%= f.label :document_type, class: "block text-sm font-medium" %>
      <%= f.select :document_type, Document::VALID_TYPES, {}, class: "mt-1 block w-full rounded-md border-gray-300" %>
    </div>
    
    <div>
      <%= f.label :file, class: "block text-sm font-medium" %>
      <%= f.file_field :file, class: "mt-1 block w-full" %>
    </div>
    
    <%= f.submit "Upload", class: "mt-4 px-4 py-2 bg-blue-500 text-white rounded-md" %>
  <% end %>
</div> 